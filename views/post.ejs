<% layout("layouts/boilerplate") %>

<section class="container my-5 bg-dark p-5 rounded-4">
  <div class="row g-4 align-items-center">

    <!-- LEFT: Image -->
    <div class="col-md-6 p-5">
      <% if (post.image) { %>
        <img src="<%= post.image %>"
             alt="<%= post.title %>"
             class="img-fluid rounded shadow w-100"
             style="object-fit: cover; max-height: 400px;">
      <% } else { %>
        <div class="bg-secondary rounded" style="height: 400px;"></div>
      <% } %>
    </div>

    <!-- RIGHT: Text Content -->
    <div class="col-md-6 text-light p-5">
      <h1 class="mb-4"><%= post.title %></h1>
      <div><%- post.content %></div>

      <div class="mt-4 d-flex gap-3">
        <a href="/" class="btn btn-outline-light">Back</a>
        <a href="/edit/<%= post.slug %>" class="btn btn-warning">Edit Post</a>
        <a href="/delete/<%= post.slug %>"
           class="btn btn-danger"
           onclick="return confirm('Are you sure you want to delete this post?');">
          Delete Post
        </a>
      </div>
    </div>

  </div>
</section>
