<% layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="card bg-dark text-light p-5 shadow-lg border border-secondary rounded">
    <h1 class="mb-4">Edit Post</h1>
    <form method="POST" action="/edit/<%= post.slug %>">
      <div class="mb-3">
        <label class="form-label">Title</label>
        <input 
          type="text" 
          name="title" 
          value="<%= post.title %>" 
          class="form-control bg-black text-light border border-secondary" 
          required>
      </div>

      <div class="mb-3">
        <label class="form-label">Content</label>
        <textarea 
          name="content" 
          rows="8" 
          class="form-control bg-black text-light border border-secondary" 
          required><%= post.content %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input 
          type="text" 
          name="image" 
          value="<%= post.image %>" 
          class="form-control bg-black text-light border border-secondary">
      </div>

      <button type="submit" class="btn btn-light px-4 rounded-pill">Update Post</button>
    </form>
  </div>
</div>
