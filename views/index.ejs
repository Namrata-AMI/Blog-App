<% layout("layouts/boilerplate") %>

<section class="hero text-center py-5">
  <div class="container">
    <h1 class="display-4 mb-3" style="color:#dd8e18;">Welcome to Blog-App</h1>
    <p class="lead mb-4">Your space for creative ideas, tech trends, travel guides & more.</p>
    <a href="/admin" class="btn btn-outline-light rounded-pill px-4">Create Post</a>
  </div>
</section>

<section class="container my-5 mb-5">
  <div class="row g-5 p-4">
    <% posts.forEach(post => { %>
      <div class="col-md-4">
        <div class="card h-100 shadow bg-dark text-light border-0 rounded-4 overflow-hidden">

          <% if (post.image) { %>
            <img src="<%= post.image %>" class="card-img-top img-fluid" alt="<%= post.title %>" style="height: 200px; object-fit: cover;">
          <% } %>

          <div class="card-body d-flex flex-column p-4">
            <h5 class="card-title mb-3">
              <a href="/posts/<%= post.slug %>" class="text-warning text-decoration-none fw-bold">
                <%= post.title %>
              </a>
            </h5>

            <p class="card-text text-secondary flex-grow-1 mb-4">
              <%- post.content.substring(0, 120) %>...
            </p>

            <a href="/posts/<%= post.slug %>" class="btn btn-outline-light btn-sm mt-auto">Read More</a>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
</section>
